<div class="cmtHead" style="margin-bottom:20px">
    <h4>
        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-chat" viewBox="0 0 16 16">
            <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
        </svg>
        <strong style="font-size:16px">
            댓글({{cmtCount}})
        </strong>
    </h4>
</div>

{{#comments}}
    <div class="card" style="margin-bottom:40px">
        <div class="container">
            <div class="title">
                <strong style="font-size:18px">
                    <span>{{nickname}}</span>
                </strong>
                <span>({{Datetime}})</span>
            </div>
            <div class="content" style="margin:10px 10px 10px 0px">
                <span>
                    {{body}}
                    <a href="/generalforum/comment_delete?comment_id={{id}}&bbs_id={{bbs.id}}" style="float: right;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                    </a>
                </span>
            </div>

        </div>
    </div>
{{/comments}}




<div style="margin-top:40px">
    <div>
        <!-- 댓글 작성 폼-->
        <form method = "post" action="/generalforum/commentAction">
            <!-- 댓글 본문 입력 -->
            <div class="mb-3">
                <label class="form-label">댓글 내용</label>
                <textarea type="text"  class="form-control form-control-sm"rows="3" name="body"></textarea>
            </div>
            <!-- 전송 버튼 -->
            {{#bbs}}
                <input type="hidden" name="bbs_id" value={{id}}>
            {{/bbs}}

            <button style="margin-top:5px" type="submit" class="btn btn-outline-primary btn-sm">댓글 등록</button>
        </form>
    </div>
</div>