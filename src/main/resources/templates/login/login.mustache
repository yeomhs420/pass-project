<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <title>로그인</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@700&family=Quicksand:wght@700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="/login/css/login.css">
</head>

<body>
    <div class="login-form">
        <h1 class="logo">SQL</h1>
        <form name="loginForm">
            <input type="text" name="userId" class="text-field" placeholder="아이디" onkeyup="checkEnter(event)">
            <input type="password" name="password" class="text-field" placeholder="비밀번호" onkeyup="checkEnter(event)">
            <input type="button" value="로그인" class="submit-btn" onclick="sub()">
        </form>
        <a href="/join"><button class="join-btn">회원가입</button></a>
    </div>
</body>

</html>

<script>
    function checkEnter(event) {
            if (event.keyCode === 13) {
                sub();
            }
        }
    function sub(){
        let formData = $("form[name=loginForm]").serialize();

        console.log(formData);

        $.ajax({
                url : '/login/action',
                type : 'POST',
                data : formData,
                dataType: 'json',
                success : function(result) {
                    console.log(result);
                    location.href = "/passes?userId=" + result.userId;
                },
                error:function(error){
                    if(error.responseJSON.msg){
                        console.log(error);
                        alert(error.responseJSON.msg);
                    }

                }
            });
    }
</script>